<%- model_class = Sala -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:local_id) %>:</strong></dt>
  <dd><%= @sala.local_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:no_sala) %>:</strong></dt>
  <dd><%= @sala.no_sala %></dd>
  <dt><strong><%= model_class.human_attribute_name(:qt_capacidad) %>:</strong></dt>
  <dd><%= @sala.qt_capacidad %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @sala.descripcion %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              salas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sala_path(@sala), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sala_path(@sala),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
