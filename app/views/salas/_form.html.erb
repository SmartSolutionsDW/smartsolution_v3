<%= simple_form_for @sala, :html => { :class => 'form-horizontal' } do |f| %>
  
  
  <%= f.association :local, label_method: :No_Local, value_method: :id, include_blank: false %>
  <%= error_span(@sala[:local]) %>
  
  <%= f.input :no_sala %>
  <%= error_span(@sala[:no_sala]) %>
  <%= f.input :qt_capacidad %>
  <%= error_span(@sala[:qt_capacidad]) %>
  <%= f.input :descripcion %>
  <%= error_span(@sala[:descripcion]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                salas_path, :class => 'btn btn-default' %>
<% end %>
