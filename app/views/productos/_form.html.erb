<%= simple_form_for @producto, :html => { :class => 'form-horizontal' } do |f| %>
  
  <%= f.association :tipo_producto, label_method: :name, value_method: :id, include_blank: false %>
  <%= error_span(@producto[:tipo_producto]) %>
  

  <%= f.input :name %>
  <%= error_span(@producto[:name]) %>
  <%= f.input :price %>
  <%= error_span(@producto[:price]) %>
  <%= image_tag @producto.picture.url(:medium) unless @producto.picture_file_name.nil? %>
  <%= f.input :picture, as: :file %>
  <%= error_span(@producto[:picture]) %>
  </br>
   <%= f.collection_radio_buttons :estado, [['1', 'Activo'] ,['0', 'Inactivo']], :first, :last  %>
  <%= error_span(@producto[:estado]) %>
  </br>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                productos_path, :class => 'btn btn-default' %>
<% end %>
