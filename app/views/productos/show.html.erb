<%- model_class = Producto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Co_Producto) %>:</strong></dt>
  <dd><%= @producto.Co_Producto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:No_Producto) %>:</strong></dt>
  <dd><%= @producto.No_Producto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Ss_Precio) %>:</strong></dt>
  <dd><%= @producto.Ss_Precio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Ct_Stock) %>:</strong></dt>
  <dd><%= @producto.Ct_Stock %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo_producto_id) %>:</strong></dt>
  <dd><%= @producto.tipo_producto_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              productos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_producto_path(@producto), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              producto_path(@producto),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
