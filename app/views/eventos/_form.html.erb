<%= simple_form_for @evento, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :local, label_method: :No_Local, value_method: :id, include_blank: false %>
  <%= error_span(@evento[:local]) %>
  
  <%= f.input :fe_evento %>
  <%= error_span(@evento[:fe_evento]) %>
  <%= f.input :capacidad %>
  <%= error_span(@evento[:capacidad]) %>
  <%= f.input :descripcion %>
  <%= error_span(@evento[:descripcion]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                eventos_path, :class => 'btn btn-default' %>
<% end %>
