<%= simple_form_for @reserva_cli,:url => reservaclicreate_path, :method => :post, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.association :sala, label_method: :descripcion, value_method: :id, include_blank: false %>
  <%= error_span(@reserva_cli[:sala]) %>
  
  <%= f.collection_select :local_id, Local.order(:id), :id, :No_Local, include_blank: true%>
  <%= f.grouped_collection_select :sala_id, Local.order(:id), :id, :descripcion, include_blank: true%>
  
  <%= f.input :fe_reserva %>
  <%= error_span(@reserva_cli[:fe_reserva]) %>
  <%= f.input :descripcion %>
  <%= error_span(@reserva_cli[:descripcion]) %>
  


  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservacli_path, :class => 'btn btn-default' %>
<% end %>
