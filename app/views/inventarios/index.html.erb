<%- model_class = Inventario -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:local_id) %></th>
      <th><%= model_class.human_attribute_name(:producto_id) %></th>
      <th><%= model_class.human_attribute_name(:cant) %></th>
      <th><%= model_class.human_attribute_name(:precio_compra) %></th>
      <th><%= model_class.human_attribute_name(:precio_venta) %></th>
      <th><%= model_class.human_attribute_name(:entrada_salida) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @inventarios.each do |inventario| %>
      <tr>
        <td><%= link_to inventario.id, inventario_path(inventario) %></td>
        <td><%= inventario.local_name %></td>
        <td><%= inventario.producto_name %></td>
        <td><%= inventario.cant %></td>
        <td><%= inventario.precio_compra %></td>
        <td><%= inventario.precio_venta %></td>
        <td><%= inventario.entrada_salida  == 'S' ? 'Salida' :'Entrada' %></td>
        <td><%=l inventario.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_inventario_path(inventario), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      inventario_path(inventario),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_inventario_path,
            :class => 'btn btn-primary' %>
