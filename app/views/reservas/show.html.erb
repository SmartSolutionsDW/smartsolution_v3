<%- model_class = Reserva -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:sala_id) %>:</strong></dt>
  <dd><%= @reserva.sala_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @reserva.user_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fe_reserva) %>:</strong></dt>
  <dd><%= @reserva.fe_reserva %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @reserva.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estado) %>:</strong></dt>
  <dd><%= @reserva.estado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aprobado) %>:</strong></dt>
  <dd><%= @reserva.aprobado %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              reservas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_reserva_path(@reserva), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              reserva_path(@reserva),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
